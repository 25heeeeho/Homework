        "from os import mkdir\n",
        "from os.path import exists\n",
        "\n",
        "while True:\n",
        "  folder = input('생성할 디렉토리 이름을 입력하세요:')\n",
        "  if exists(folder):\n",
        "    print(f'<{folder}>가 이미 존재합니다.')\n",
        "    continue\n",
        "  else:\n",
        "    mkdir(folder)\n",
        "    print(f'<{folder}>를 생성했습니다.')\n",
        "    break"
